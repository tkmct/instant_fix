  <!-- ヘッダ終了 -->

    <div class="container">
      <!-- picture & name, star -->
      <div class="page-header" id="banner">
          <div class="row">
              <div class="col-lg-4">
                  <div class="sponsor">
                      <br>
                      <a href="#" target="_blank">
                          <img src="<%= @user.avatar %>" alt="UserAvatar" width="240" height="240">
                      </a>
                  </div>
              </div>
              <div class="col-lg-8">
                  <h1><%= @user.name %></h1>
                  <% number =0 %>
                  <% @user.solutions.each do |solution| %>
                  <% number = number + "#{solution.good}" %>
                  <% end %>
                  <h3>いいねの数：<%= number %>件</h3>
                  <% if number == 0 %>
                  積極的に投稿して、評価を上げましょう！
                  <% end %>
              </div>
          </div>
      </div>


      <!-- 投稿履歴とプロフィール文 -->
      <div class="bs-docs-section">
          <div class="row">
              <div class="col-lg-6">
                  <div class="page-header">
                      <h1 id="typography">エラー詳細投稿履歴</h1>
                  </div>
                  <div class="bs-component">
                  <% if @user.solutions.count == 0 %>
                  <p>まだ投稿がありません。評価を上げるために、
                  積極的に投稿しましょう！</p>
                  <% else %>
                    <% @user.solutions.each do |solution| %>
                      <div class="panel panel-default">
                          <div class="panel-body">
                              <a href="#"><%= solution.id %></a>
                          </div>
                      </div>
                    <% end %>
                  <% end %>
                  </div>
              </div>
              



              <div class="col-lg-6">
                <div class="page-header">
                    <h1 id="typography">クリップ一覧</h1>                     
                </div>
                <div class="bs-component">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <a href="#">ここにクリップしたページへのリンクが貼られる1</a>
                        </div>                  
                    </div>
                </div>
              </div>



              <div class="col-lg-6">
                  <div class="page-header">
                      <h1 id="typography">プロフィール詳細</h1>
                      
                  </div>
                  <div class="bs-component">
                      <blockquote>
                          <p><%= @user.message %></p>
                      </blockquote>
                      <blockquote>
                          <a href="<%= @user.url %>"><%= @user.name %>さんのQuiita</a>
                      </blockquote>
                      <blockquote>
                          <a href="<%= @user.url %>"><%= @user.name %>さんのGithub</a>
                      </blockquote>
                  </div>
              </div>
          </div>
      </div>
      
    
     
    
      <div id="source-modal" class="modal fade">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Source Code</h4>
            </div>
            <div class="modal-body">
              <pre></pre>
            </div>
          </div>
        </div>
      </div>

      <footer>
        <div class="row">
          <div class="col-lg-12">

            <ul class="list-unstyled">
              <li class="pull-right"><a href="#top">Back to top</a></li>              
            </ul>            
          </div>
        </div>

      </footer>

    </div>


